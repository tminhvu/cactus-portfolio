---
import PageLayout from "@/layouts/Base";
import BlogPostPreview from "@/components/BlogPostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/util";
import type { Post } from "@/types";

const meta = {
	title: "Internet trash bin",
	description: "tminhvu's personal blog, where I post about my opinion on Neovim, Linux, BSPWM, C, Lua, JS, React and more",
};

const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.md");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={meta}>
	<section>
		<h1 class="mb-6 title">Xin chào!</h1>
		<p class="mb-4">
		    Đây là blog cá nhân, tạo bằng
            <a
            href="https://astro.build/"
            target ="_blank"
			rel="noopener noreferrer"
			class="inline-block cactus-link"
			> Astro
		    </a>
                , theme
            <a
            href="https://github.com/chrismwilliams/astro-theme-cactus"
            target ="_blank"
			rel="noopener noreferrer"
			class="inline-block cactus-link"
			> Astro Cactus
		    </a>
                , deploy bằng
            <a
            href="https://vercel.com"
            target ="_blank"
			rel="noopener noreferrer"
			class="inline-block cactus-link"
			> Vercel
		    </a>
		</p>
        <p class="mb-4">
            "Linux enjoyer, C admirer, Lua scripter, Neovim user"
        </p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="mb-4 text-xl title">Blog posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-wrap items-center gap-x-2 [&_q]:w-full">
						<BlogPostPreview post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="mb-4 text-xl title">Projects</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<a
					href="https://github.com/tminhvu/mellow.nvim"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>tminhvu/mellow.nvim
				</a>:
				<p class="inline-block sm:mt-2">
                    Dark colorscheme nhẹ mắt, dựa trên
                    <a
                        href="https://github.com/kvrohit/mellow.nvim"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-block cactus-link"
                        >kvrohit/mellow.nvim
                    </a>
				</p>
			</li>
			<li>
				<a
					href="https://github.com/tminhvu/nvim"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>NVIM dot files
				</a>:
				<p class="inline-block sm:mt-2">
                    Neovim config của mình
				</p>
			</li>
            <li>
				<a
					href="https://github.com/tminhvu/cactus-portfolio"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>cactus-portfolio
				</a>:
				<p class="inline-block sm:mt-2">Chính là cái blog này đây, dùng Astro với mỗi Post là một file Markdown</p>
			</li>
			<li>
				<a
					href="https://github.com/tminhvu/purplerain-lua"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-block cactus-link"
					>purplerain-lua
				</a>:
				<p class="inline-block sm:mt-2">Purple rain coding challenge với Lua và thư viện đồ họa Love2d</p>
			</li>
		</ul>
	</section>
</PageLayout>
